CREATE TABLE Users(
id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
nome VARCHAR (45) NOT NULL,
sobre_nome VARCHAR (45) NOT NULL,
user_name VARCHAR (45) NOT NULL,
email VARCHAR (110) NOT NULL,
senha VARCHAR (255) NOT NULL,
celular VARCHAR (20) NOT NULL,
sexo VARCHAR (15) NOT NULL,
data_nasc DATE NOT NULL,
cdd VARCHAR (50) NOT NULL
);

CREATE TABLE empresa(
id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
nome VARCHAR (45) NOT NULL,
user_name VARCHAR (45) NOT NULL,
email VARCHAR (110) NOT NULL,
senha VARCHAR (255) NOT NULL,
celular VARCHAR (20) NOT NULL,
cdd VARCHAR (50) NOT NULL,
desc_emp VARCHAR (100) NOT NULL
);


CREATE TABLE form_vaga(
id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
nome VARCHAR (45) NOT NULL,
nome_emp VARCHAR (45) NOT NULL,
estado VARCHAR (110) NOT NULL,
regiao VARCHAR (110) NOT NULL,
celular VARCHAR (20) NOT NULL,
desc_aluno VARCHAR (100) NOT NULL,
dia VARCHAR (50) NOT NULL
);


CREATE TABLE form_emp(
id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
area_emp VARCHAR (300) NOT NULL,
espe_emp VARCHAR (300) NOT NULL,
cursos_emp VARCHAR (300) NOT NULL,
local_emp VARCHAR (300) NOT NULL,
hora_emp VARCHAR (300) NOT NULL
);






CREATE TABLE arquivos(
id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
nome_arquivo VARCHAR (100) NOT NULL,
path VARCHAR (100) NOT NULL
);

CREATE TABLE arquivos_emp(
id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
nome_arquivo VARCHAR (100) NOT NULL,
path VARCHAR (100) NOT NULL
);

CREATE TABLE perfil(
id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
nome_arquivo VARCHAR (100) NOT NULL,
path VARCHAR (100) NOT NULL
);
